{% set langFilePostfix = tags | langFilePostfix %}
<!DOCTYPE html>
<html {{ tags | htmllangattributes | safe }}>
  <head>
    <meta charset="utf-8"/>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <meta name="description" content="{{ meta | safe }}"/>
    <meta name="author" content="{{ author | safe }}"/>
    <meta
      name="keywords"
      content="covid-19 california, covid-19 ca, covid-19 volunteer, covid-19 testing, covid-19 testing costs, covid-19 testing california, covid-19 toolkit, stay home save lives, california health corps, covid-19 immigrants, covid-19 financial help, covid-19 medi-cal, covid-19 healthcare, covid-19 alerts"
/>
    <title>{{ title | safe }}</title>

    <!-- combined social media meta -->
    <meta content="{{ title | safe }}" property="og:title"/>
    <meta
      content="{{ meta | safe }}"
      property="og:description"
/>
    <meta
      content="https://covid19.ca.gov/img/awareness/caforall_covid_endcards_v4_english.jpg"
      property="og:image"
/>
    <meta content="https://covid19.ca.gov/" property="og:url"/>
    <meta name="twitter:card" content="summary_large_image"/>
    <link rel="preconnect" href="https://www.google-analytics.com/">
    <link href="https://covid19.ca.gov/" rel="canonical"/>

    {% include "favicons.njk" %}
    <link rel="manifest" href="/img/manifest.json"/>
    <meta name="msapplication-tilecolor" content="#ffffff"/>
    <meta name="msapplication-tileimage" content="img/ms-icon-144x144.png"/>
    <meta name="theme-color" content="#ffffff"/>
    {% set css %}
    {% include "built.css" %}
    {% endset %}
    <style>
      {{css | cssmin | safe}}
    </style>
  </head>
  <body>
    {% include "header.njk" %}
    <main id="main">
      <div id="top" class="container-fluid jumbotron inverse-hyperlink mb-0">
        <div class="container">
          <div class="row">
            <div class="col-lg-8">
              {% include "../wordpress-posts/home-header" + langFilePostfix + ".html" %}
            </div>

            <div class="col-lg-4 text-right">
              <a href="https://toolkit.covid19.ca.gov/"
                aria-label="california for all your actions save lives visit california for all website"
                ><img
                  src="/img/california-for-all.png"
                  class="rounded float-left img-fluid mr-5"
                  alt="california for all your actions save lives visit california for all website"
/></a>
              <a
                href="https://www.cdph.ca.gov/programs/cid/dcdc/pages/immunization/ncov2019.aspx"
                aria-label="visit department of public health website"
                ><img
                  src="/img/cdph-logo.png"
                  class="rounded float-left img-fluid pt-3"
                  alt="visit department of public health website"
/></a>
            </div>
          </div>
        </div>
      </div>

      <div class="container">
        <div class="row">
          <div id="side-nav" class="p-0">
            <cwds-accordion class="d-sm-block d-md-none">
              <div id="nav-card" class="card mb-n3">
                <button
                  class="card-header accordion-alpha mobile-menu"
                  type="button"
                  aria-expanded="false"
                >
                  <div class="accordion-title">
                    <span id="mobile-icon" class="ca-gov-icon-menu"></span> Menu
                  </div>
                </button>
                <div class="card-container collapsed">
                  <div id="body-nav" class="card-body">
                    {% include "page-nav.njk" %}
                  </div>
                </div>
              </div>
            </cwds-accordion>
          </div>
        </div>
      </div>
      <div class="container-fluid bg-highlight pb-3 pt-3">
        <div class="container">
          {% include "../wordpress-posts/stats" + langFilePostfix + ".html" %}
        </div>
      </div>
    </div>
    <div class="container-fluid pb-3 pt-3 bg-light mb-3">
      <div class="container">
        <div class="col-md-12 alert-left js-disclaimer ml-0">
          {% include "../wordpress-posts/new" + langFilePostfix + ".html" %}
        </div>
      </div>
    </div>
    {{ content | safe }}
    {% include "home-nav-links.njk" %}
    {% include "dodonot.njk" %}
    <div class="container-fluid bg-primary text-white">
      <div class="container pb-3 pt-3 text-white">
        {% include "../wordpress-posts/cali-working" + langFilePostfix + ".html" %}
      </div>
    </div>
    {% include "../wordpress-posts/find-services" + langFilePostfix + ".html" %}
    {% include "./news-feed-home.html" %}
  </main>
  {% include "footer.njk" %}
</body>
</html>